{
  "manifest_version": 2,
  "name": "C.H.I.P. Backup & Restore",
  "short_name": "C.H.I.P. Backup",
  "description": "Backup and Restore C.H.I.P images",
  "version": "0.1.0",
  "icons": {
    "16": "icon155.png",
    "48": "icon155.png",
    "128": "icon155.png",
    "155": "icon155.png"
  },
  "app": {
    "background": {
      "scripts": ["main.js"]
    }
  },
  "permissions": [
    "storage",
    "usb",
    {"fileSystem": ["write"]},
    {
      "usbDevices": [
        {
          "vendorId": 7994,
          "productId": 61416
        },
        {
          "vendorId": 6353,
          "productId": 4112
        }
      ]
    }
  ]
}
